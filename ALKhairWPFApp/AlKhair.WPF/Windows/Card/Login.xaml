<Window x:Class="AlKhair.WPF.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlKhair.WPF.Windows"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <StackPanel>
        <TextBlock Margin="20,10">Al Khair Enterprises</TextBlock>
        <GroupBox Margin="5" Padding="5" Header="Login Credentials">
            <StackPanel>
                <TextBlock Margin="0,5">User name</TextBlock>
                <TextBox Name="txtUsername"></TextBox>
                <TextBlock Margin="0,5">Password</TextBlock>
                <TextBox Name="txtPassword"></TextBox>
                <TextBlock Margin="0,5">Company</TextBlock>
                <ComboBox Name="cbCompany"></ComboBox>
                <Button VerticalAlignment="Bottom" Margin="0,20" Name="btnLoginSubmit">Login</Button>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
